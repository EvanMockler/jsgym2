{{#each member.assessments}}
<table class="ui celled table">
  <thead>
    <tr>
      <th> Date </th>
      <th> Weight </th>
      <th> Chest </th>
      <th> Thigh </th>
      <th> Upper Arm </th>
      <th> Waist </th>
      <th> Hips </th>
      <th> Trend </th>
      <th> Comment </th>
    </tr>
  </thead>
  <tbody>
    
      <tr>
        <td>
          {{date}}
        </td>
        <td>
          {{weight}}
        </td>
        <td>
          {{chest}}
        </td>
        <td>
          {{thigh}}
        </td>
        <td>
          {{upperArm}}
        </td>
        <td>
          {{waist}}
        </td>
        <td>
          {{hips}}
        </td>
        <td>
          #{if _assessment.trend}
            <a class="ui teal tag label"></a>
          #{/if}
          #{if !_assessment.trend}
            <a class="ui red tag label"></a>
          #{/if}
        </td>
        <td>
          {{comment}}
        </td>
      </tr>
   
  </tbody>
</table>
 <form class="ui form" action="/member/{{../member.id}}/addComment/{{id}}" method="POST">
    <div class="ui field">
      <textarea rows="2" name="comment"> {{assessment.comment}} </textarea>
    </div>
    <button class="ui blue submit button"> Update </button>
  </form>
 {{/each}}